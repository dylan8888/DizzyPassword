<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_list_card_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:stackHeaderHeight="160dp">

    <RelativeLayout
        android:id="@+id/frame_list_card_item"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/shape_rectangle_with_radius">

        <TextView
            android:id="@+id/text_list_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:text="12"/>

        <TextView
            android:id="@+id/text_list_card_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="15dp"
            android:maxLines="1"
            android:textSize="16sp"
            tools:text="12"/>

        <TextView
            android:id="@+id/text_list_card_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/text_list_card_num"
            android:layout_below="@id/text_list_card_num"
            android:text="添加时间"
            android:textSize="10sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="70dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_list_card_tag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/search_label"
                android:text="游戏"
                android:textColor="#3f3e3e"
                android:textSize="18sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/text_list_card_tag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/text_list_card_tag1"
                android:background="@drawable/search_label"
                android:text="社交"
                android:textColor="#3f3e3e"
                android:textSize="18sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/text_list_card_tag3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/text_list_card_tag2"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/text_list_card_tag2"
                android:background="@drawable/search_label"
                android:text="网易"
                android:textColor="#3f3e3e"
                android:textSize="18sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/text_list_card_tag4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/text_list_card_tag2"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/text_list_card_tag3"
                android:background="@drawable/search_label"
                android:text="网易"
                android:textColor="#3f3e3e"
                android:textSize="18sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/text_list_card_tag5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/text_list_card_tag2"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/text_list_card_tag4"
                android:background="@drawable/search_label"
                android:text="网易"
                android:textColor="#3f3e3e"
                android:textSize="18sp"
                android:visibility="gone"/>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:animateLayoutChanges="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_color"/>

        <LinearLayout
            android:id="@+id/container_list_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_gravity="center"
            android:background="@drawable/shape_rectangle_with_radius"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tv_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:text="帐号：xzq351107836@163.com"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="12dp"
                    android:text="密码：yinfengzhoumian"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="12dp"
                    android:text="备注：这里是备注信息"
                    android:textSize="16sp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_dotted_line"
                android:layerType="software">
            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <Button
                    android:id="@+id/bt_change"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/search_label"
                    android:text="修改"
                    android:visibility="invisible"/>

                <Button
                    android:id="@+id/bt_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/search_label_delete"
                    android:text="删除此条帐号信息"
                    android:textColor="@color/bg_color"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/copy"/>

    </RelativeLayout>

</LinearLayout>